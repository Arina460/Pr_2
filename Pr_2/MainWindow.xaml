<Window x:Class="Pr_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pr_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="Меню">
                <MenuItem Header="О программе" Name="about" Click="about_Click"/>
                <MenuItem Header="Выход" Name="exit" Click="exit_Click"/>
                <MenuItem Header="Сохранить" Click="save_Click" Name="save"/>
                <MenuItem Header="Загрузить" Click="load_Click" Name="load"/>
            </MenuItem>
        </Menu>
        <DataGrid Grid.Row="1" Grid.Column="0" Name="tabl" Margin="30,10,30,10"/>
        <StackPanel Margin="20"  Grid.Row="2" Grid.Column="0">
            <Button x:Name="clear" Content="Очистить" Click="clear_Click" FontSize="14" Margin="10"/>
            <Button x:Name="zap" Content="Заполнить" Click="zap_Click" FontSize="14" Margin="10"/>
            <Button x:Name="otvet" Content="Посчитать" Click="otvet_Click" FontSize="14" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.RowSpan="2" Grid.Column="1">
            <TextBlock Text="Введите диапазон значений" Margin="80,40,80,10" FontSize="14" />
            <TextBox Name="znach" Margin="80,10,80,10"/>
            <TextBlock Text="Введите количество строк" Margin="80,80,80,10" FontSize="14" />
            <TextBox Name="razm" Margin="80,10,80,10"/>
            <TextBlock Text="Введите количество столбцов" Margin="80,10,80,10" FontSize="14" />
            <TextBox Name="razm1" Margin="80,10,80,10"/>
        </StackPanel>
    </Grid>
</Window>
